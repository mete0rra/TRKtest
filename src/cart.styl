.shopping__cart
  width: 100%;
  margin-top: 30px;
  margin 0 auto;
  &__header
    background-color #F9FAFC;
    height: 60px;
    display: flex;
    align-items: center;
    &__heading
      font-size 22px;
      line-height: 28px;
      font-weight 700;
      color #3B4858;
      padding-left: 20px;
  &__content
    margin-top: 15px;
    &__header
      display: flex;
      justify-content: space-between;
      font-size 18px;
      font-weight 600;
      line-height: 23px;
      color #3B4858;
      width: 90%;
      margin 0 auto;
      border-bottom 2px solid #E4E4E4;
      padding-bottom: 10px;
      &__left
        display: flex;
        justify-content: space-between;
        width: 30%;
      &__right
        display: flex;
        justify-content: space-between;
        width: 30%;
    &__item
      display: flex;
      justify-content: space-between;
      margin 0 auto;
      width: 90%;
      margin-top: 10px;
      &__left
        display: flex;
        justify-content: space-between;
        width: 30%;
        margin-top: 30px;
        margin-left: 30px;
        align-items: center;
        &__imgbox
          width: 20%;
          &__img
            width: 100%;
            border-radius 6px;
        &__checkbox
          width: 24px;
          height: 24px;
        &__desc
          font-size 18px;
          font-weight 600;
          line-height: 30px;
          color #3B4858;
      &__right
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 30%;
        margin-top: 30px;
        font-size 18px;
        font-weight 600;
        line-height: 30px;
        color #3B4858;
        &__qty
          width: 20%;
          height: 30px;
          font-size 18px;
          font-weight 600;
          line-height: 30px;
          color #3B4858;
    &__buttons
      margin-top: 30px;
      background-color #F9FAFC;
      height: 85px;
      text-align right;
      &__update
        padding 10px 25px;
        margin-top: 22px;
        border-radius 6px;
        border 2px solid #1FB6FF;
        font-size 16px;
        line-height: 20px;
        font-weight 600;
        color #8392A6;
        background-color #FFFFFF;
        transition $transition;
      &__update:hover
        background-color $mainColor;
        color #FFFFFF;
      &__continue
        padding 10px 33px;
        margin-top: 22px;
        margin-left: 30px;
        margin-right: 25px;
        border-radius 6px;
        border 2px solid #1FB6FF;
        font-size 16px;
        line-height: 20px;
        font-weight 600;
        color #8392A6;
        background-color #FFFFFF;
        transition $transition;
      &__continue:hover
        background-color $mainColor;
        color #FFFFFF;
  &__summary
    width: 25%;
    background-color #F9FAFC;
    margin-top: 60px;
    display: flex;
    justify-content: right;
    flex-direction column;
    margin-left: 70%;
    padding 25px;
    &__subtotal
      display: flex;
      justify-content: space-between;
      font-size 16px;
      line-height: 20px;
      color #3B4858;
      margin-top: 20px;
    &__shipping
      display: flex;
      justify-content: space-between;
      font-size 16px;
      line-height: 20px;
      color #3B4858;
      margin-top: 30px;
    &__tax
      display: flex;
      justify-content: space-between;
      font-size 16px;
      line-height: 20px;
      color #3B4858;
      margin-top: 30px;
    &__total
      display: flex;
      justify-content: space-between;
      color #3B4858;
      font-size 28px;
      line-height: 36px;
      font-weight 600;
      margin-top: 20px;
      padding-top: 5px;
      padding-bottom: 5px;
      border-top 1px solid #E1E8F0;
      border-bottom: 1px solid #E1E8F0;
    &__terms
      margin-top: 20px;
      display: flex;
      justify-content: space-between;
      &__label
        margin-left: 10px;
        &__link
          color $mainColor;
          text-decoration none;
    &__checkout
      padding 12px 127px;
      margin-top: 35px;
      background-color #FFFFFF;
      border-radius 6px;
      border 2px solid $mainColor;
      transition $transition;
      color #3B4858;
      font-size 16px;
      line-height: 20px;
      font-weight 600;
      text-transform uppercase;
    &__checkout:hover
      background-color $mainColor;
      color #FFFFFF;